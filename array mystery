public class MyClass {
    public static void main(String args[]) {
      int x[]={1, 7, 5, 6, 4, 14, 11};
      for(int i = 1; i < x.length; i++)
      {
          if(x[i]<x[i-1])
          {
              x[i]*=2;
          }
      }
      for(int i = 0; i < x.length;i++)
      {
          System.out.print(x[i]+" ");
      }
    }
}
//double the value of an element if the previous element value is greater than the current one.
